<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ztxs.myapplication2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="my.android.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="my.android.activity.SecondActivity" >
            <intent-filter>
                <!-- 只能有1个action，但可以有多个category -->
                <action android:name="myapplication.activity.second.Start"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="myapplication.category.Second"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
